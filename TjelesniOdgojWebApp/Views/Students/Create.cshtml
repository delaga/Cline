@model TjelesniOdgojWebApp.Models.Student

@{
    ViewData["Title"] = "Dodaj novog učenika";
}

<h2>Dodaj novog učenika</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FirstName" class="control-label"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="control-label"></label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ClassName" class="control-label"></label>
        <input asp-for="ClassName" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Dodaj" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Natrag na popis</a>
    </div>
</form>
