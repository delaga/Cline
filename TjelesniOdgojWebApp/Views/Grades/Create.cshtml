@model TjelesniOdgojWebApp.Models.Grade

@{
    ViewData["Title"] = "Dodaj ocjenu";
    var studentId = ViewBag.StudentId;
}

<h2>Dodaj ocjenu</h2>

<form asp-action="Create">
    <input type="hidden" name="StudentId" value="@studentId" />
    
    <div class="form-group">
        <label asp-for="Value" class="control-label"></label>
        <input asp-for="Value" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Date" class="control-label"></label>
        <input asp-for="Date" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
    </div>
    <div class="form-group">
        <input type="submit" value="Dodaj" class="btn btn-primary" />
        <a asp-action="Index" asp-route-studentId="@studentId" class="btn btn-secondary">Natrag na ocjene</a>
    </div>
</form>
